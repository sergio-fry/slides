	../.engine/node_modules/@marp-team/marp-cli/marp-cli.js --engine ../.engine/engine.js -w slides.md

pdf:
	../.engine/node_modules/@marp-team/marp-cli/marp-cli.js --engine ../.engine/engine.js  --allow-local-files slides.md -o slides.pdf
